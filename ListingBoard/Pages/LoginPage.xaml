<Page x:Class="ListingBoard.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ListingBoard.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>

        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10" >
                <Label Margin="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Логин:"/>
                <TextBox Margin="10" x:Name="tbLogin" MinWidth="200" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Margin="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Пароль:"/>
                <PasswordBox Margin="1,10,10,10" x:Name="pbPassword" MinWidth="200" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />

            </StackPanel>

            <Button x:Name="btnLogin" Content="Авторизоваться" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="200" Click="btnLogin_Click"/>
        </StackPanel>

    </Grid>
</Page>
